{
    "manifest_version": 3,
    "name": "YouTube Video Detector",
    "version": "1.0.0",
    "description": "Detects YouTube videos in the current tab",
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "action": {
      "default_popup": "dist/popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["*://*.youtube.com/*"],
    "background": {
      "service_worker": "src/background.js"
    },
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/watch*"],
        "js": ["src/content.js"]
      }
    ]
  }
  